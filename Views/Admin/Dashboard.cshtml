@model IEnumerable<HRMS_project.Models.Bunit>

@{
    ViewData["Title"] = "Business Unit";
}
<html>
    <head>
<title>Dashboard</title>
  <link rel="stylesheet" href="~/css/bunit.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    </head>
    <body>
         <div class="card">
              <div class="card-header bg-danger text-uppercase text-white">
                    <h4 class="text-center"> Business Units </h4>
                  <form asp-controller="Admin" asp-action="Dashboard" method="get">
                 <input type="text" placeholder="Search.." name="search">
                 
                <input type="submit" value="Search" class="btn btn-primary" />
               
                  </form>
                <a asp-action="Index" asp-controller="Admin" class="btn btn-primary">Admin Dashboard</a>
                </div>
                
              
                  <div class="card-body">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Businessunit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bunit_status)
            </th>
            <th><a asp-action="BusinessUnitInfo" asp-controller="Admin" class="btn btn-primary">Add</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Businessunit)
            </td>
              <td>
         
                 @if(item.Bunit_status == true)
                            {
                                @Html.DisplayName("Active")
                            }
                            else
                            {
                             @Html.DisplayName("InActive")

                            }
                           
            </td>
            <td>
               
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.BUnitID">
                   <i class="fa fa-pencil-square-o"></i>
                </a> 
               
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.BUnitID">
                    <i class="fa fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
  </body>
</html>