@model HRMS_project.Models.offcheckpoint

@{
    ViewData["Title"] = "OffBoardingcheckpoint";
}
<html>
    <head>
       
        <script src="~/Scripts/offboarding.js"></script>
    </head>
    <body>

<hr />

        <form  asp-controller="OffBoarding" asp-action="OffBoardingcheckpoint" method="post" class="form-horizontal" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-4"></div>
            <div class="col-md-4">
                 <div class="card">
                       <div class="card-header bg-info text-uppercase text-white">
                    <h4>OffBoardingcheckpoint</h4>
                </div>
                <div class="card-body">
                       <form enctype="multipart/form-data" asp-action="New">
            <div class="form-group">
                <label asp-for="offcheckpointName" class="control-label"></label>
                <input asp-for="offcheckpointName" id="offcheck" class="form-control" />
                <span asp-validation-for="offcheckpointName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BUnitID" class="control-label">Businessunit</label>
                @Html.HiddenFor(m => m.BUnitID, new{ @id= "Bnid"})

               @Html.DropDownListFor(m => m.BUnitID, (SelectList)ViewBag.bunit, "Choose a Businessunit", new { @class = "form-control",@id="offbunit" })
                    
               <span asp-validation-for="BUnitID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeptId" class="control-label">Department</label>
                  @Html.HiddenFor(m => m.DeptId, new{ @id= "DEid"})
                  @Html.DropDownListFor(m => m.DeptId, (SelectList)ViewBag.depts, "Choose a Department", new { @class = "form-control", @id="offdept" })   
              
                 <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssigneeId" class="control-label">Assignee</label>
                 @Html.DropDownListFor(m => m.AssigneeId, (SelectList)ViewBag.asigne, "Choose a Assignee", new { @class = "form-control", @id="offasign" })
              
                    
                <span asp-validation-for="AssigneeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" id="offdesc" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" id="button" value="Create" class="btn btn-primary" />
            </div>
            </form>
            </div>
            </div>
                </div>
</div>
  
        </form>

<div class="row">
    <div class="col-sm-4"> </div>
    <div class="col-sm-4">
        <a asp-action="OffBoardingcheckpointUnits" asp-controller="OffBoarding" class="btn btn-primary">Go to OffBoardingDashboard</a>
        </div>
        <div>
         <a asp-action="Index" asp-controller="Admin" class="btn btn-primary">Admin Dashboard</a>
    </div>

   <div class="col-sm-4"> </div>
   
</div>

 </body>
</html>